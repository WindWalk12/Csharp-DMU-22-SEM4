@{
    <h1>Simple calculator</h1>
    @using (Html.BeginForm())
    {
        <p>
            @Html.TextBox("Number1", (string)ViewBag.Number1) <br />
            @Html.TextBox("Number2", (string)ViewBag.Number2)
        </p>
        <p>
            <input type="submit" value="+" name="Operator">
            <input type="submit" value="-" name="Operator">
            <input type="submit" value="*" name="Operator">
            <input type="submit" value="/" name="Operator">
        </p>
    }
    @if (ViewBag.Result != null && ViewBag.DivideZero == false)
    {
        <p>Result: @ViewBag.Result</p>
    }
    else if (ViewBag.DivideZero == true)
    {
        <p>You can't divide by 0 you cheeky one</p>
    }
}

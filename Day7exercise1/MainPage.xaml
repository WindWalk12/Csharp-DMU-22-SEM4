<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Day7exercise1.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Label x:Name="lblModel" Text="{Binding Model}"></Label>
            <Label x:Name="lblHorsePower" Text="{Binding HorsePower}"></Label>
            <CheckBox x:Name="chkElectric" IsChecked="{Binding ElectricPower}"></CheckBox>
            <Button Text="Show car" Clicked="btnShow_Clicked"></Button>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
